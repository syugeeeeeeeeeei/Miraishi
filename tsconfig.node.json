{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*","src/types/**/*"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@myTypes/*": [
        "src/types/*"
      ]
    }
  }
}
